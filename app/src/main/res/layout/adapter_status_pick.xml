<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_stts_pick">

    <ImageView
        android:id="@+id/img_sts"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_sts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Status Pick"
        android:textColor="@color/abu"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sts"
        app:layout_constraintStart_toEndOf="@+id/img_sts"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tgl_sts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/tgl"
        android:textColor="@color/abu"
        app:layout_constraintBottom_toBottomOf="@+id/name_sts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_sts" />

    <TextView
        android:id="@+id/ket_sts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:lines="4"
        android:layout_marginBottom="8dp"
        android:text="keterangan"
        android:textColor="@color/abu1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tgl_sts"
        app:layout_constraintStart_toStartOf="@+id/name_sts"
        app:layout_constraintTop_toBottomOf="@+id/tgl_sts" />

</androidx.constraintlayout.widget.ConstraintLayout>