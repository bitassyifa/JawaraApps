<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_history_trans">
    <ImageView
        android:id="@+id/img_sts"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/duid"
        android:layout_margin="5dp"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="uang"
        android:textColor="@color/firstcolor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sts"
        app:layout_constraintStart_toEndOf="@+id/img_sts"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tgl_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/tgl"
        android:textColor="@color/abu"
        app:layout_constraintBottom_toBottomOf="@+id/money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/money" />

    <TextView
        android:id="@+id/oil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="minyak"
        android:textColor="@color/abu1"
        android:textSize="12sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/money"
        app:layout_constraintTop_toBottomOf="@+id/tgl_trans" />
</androidx.constraintlayout.widget.ConstraintLayout>